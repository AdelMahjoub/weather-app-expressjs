<% include header %>

  <div class="row text-center">
    <div class="col-xs-12 col-md-4 col-md-offset-4 text-center">
      <div class="page-header">
        <h1 id="city"></h1>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4 text-center">
      <div class="panel panel-default">
          <div class="panel-body">
            <h1>
              <i id="current-icon"></i>
              <span id="current-temperature"></span>
            </h1>
          </div>
          <div class="panel-footer">
            <h4 id="current-summary"></h3>
          </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <div class="table-responsive table-bordered">
        <table class="table table-hover">
          <thead>
            <tr>
              <th class="text-center"><i></i></th>
              <th class="text-center"><i></i></th>
              <th class="text-center"><i></i></th>
              <th class="text-center"><i></i></th>
            </tr>
          </thead>
          <tbody class="text-center">
            <tr>
              <td id="current-precipIntensity"></td>
              <td id="0-sunriseTime"></td>
              <td id="0-sunsetTime"></td>
              <td id="current-windSpeed"></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <hr>
    </div>
  </div>
  
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      
      <div class="table-responsive table-bordered table-striped">
        <table class="table table-hover">
          <tbody>
            <tr>
              <td>
                <p id="1-time"></p>
              </td>
              <td>
                <span><i id="1-icon"></i></span>
              </td>
              <td class="text-right">
                <span id="1-temperatureMax"></span>
                <span id="1-temperatureMin"></span>
              </td>
            </tr>
            <tr>
              <td>
                <p id="2-time"></p>
              </td>
              <td>
                <span><i id="2-icon"></i></span>
              </td>
              <td class="text-right">
                <span id="2-temperatureMax"></span>
                <span id="2-temperatureMin"></span>
              </td>
            </tr>
            <tr>
              <td>
                <p id="3-time"></p>
              </td>
              <td>
                <span><i id="3-icon"></i></span>
              </td>
              <td class="text-right">
                <span id="3-temperatureMax"></span>
                <span id="3-temperatureMin"></span>
              </td>
            </tr>
            <tr>
              <td colspan="3">
                <p id="daily-summary"></p>
              </td>
            </tr>
          </tbody>
        </table>
      </div> 
    </div>
  </div>

<% include footer %>
